<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to "Add a New Course", "/courses/new", "class" => 'btn btn-lg btn-primary' %>
  </div>
</div>

<h2> <font face="arial" color=purple>Choose a Class:</font> </h2>

</div>

<table>
<style>
table,th,td
{
border:1px solid #C0C0C0;
border-collapse:collapse
}
</style>
<table style="width:600px">

<% all_courses = Course.order("dept asc, course_no asc") %>
<% if params["dept"].present? %>
<%   all_courses = Course.where("dept" => params["dept"]).order("course_no asc") %>
<% end %>


  <thead>
  <tr>
    <th> Department </th>
    <th> Class Number </th>
    <th> Class name </th>
    <th> Action </th>
  </tr>
  </thead>
  <tbody>

<% all_courses.each do |course| %>

  <tr>
    <% name = course["course_name"] %>
    <td><%= course["dept"] %></td>
    <td><%= course["course_no"] %></td>
    <td><%= link_to name, "/courses/#{course["id"]}" %></td>
    <td><%= link_to "(Delete)", "/courses/#{course["id"]}", "method" => "delete" %></td>

  </tr>
<% end %>
</tbody>
</table>
</style>
</table>
